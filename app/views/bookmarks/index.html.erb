<h1>Listing bookmarks</h1>

<table>
  <tr>
		<th>Text</th>
    <th>Sentence</th>
    <th>Comment</th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
		<td><%=h bookmark.tagged_text.title %></td>
    <td><%=h Sentence.find(bookmark.sentence_id).text_index + 1 %></td>
    <td><%=h bookmark.comment %></td>
		<td><%= link_to 'Go', sentence_path(bookmark.sentence_id) %></td>
    <td><%= link_to 'Show', bookmark %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', tagged_texts_path %>|
<%= link_to 'New bookmark', new_bookmark_path %>
