<h1>Editing tagged_text</h1>

<% form_for(@tagged_text) do |f| %>
  <%= f.error_messages %>

	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :comment %><br/>
		<%= f.text_area :comment, :rows => 6 %>
	</p>

  <p>
    <%= f.label :filename %>: <%= f.object.filename %><%= f.hidden_field :filename %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @tagged_text %> |
<%= link_to 'Back', tagged_texts_path %>
